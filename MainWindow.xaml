<Window x:Class="_04_Moto_Proiettile_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_04_Moto_Proiettile_WPF"
        mc:Ignorable="d"
        Title="FormSIm" d:DesignHeight="428.72" d:DesignWidth="402.44">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Angolo di lancio (gradi):"/>
            <TextBox x:Name="txtAngolo"/>
            <TextBlock Text="Forza impressa (N):"/>
            <TextBox x:Name="txtForza"/>
            <TextBlock Text="Peso del proiettile (kg):"/>
            <TextBox x:Name="txtPeso"/>
            <Button Content="Avvia Simulazione" Click="BtnAvviaSimulazione_Click" Height="39"/>
        </StackPanel>
    </Grid>
</Window>
